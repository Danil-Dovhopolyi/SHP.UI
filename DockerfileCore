FROM mcr.microsoft.com/dotnet/sdk:5.0 AS build-env
WORKDIR ./app

# COPY SHP.Data/SHP.Data.csproj ./SHP.Data/
# RUN dotnet restore SHP.Data/SHP.Data.csproj

COPY [./OnlineShopBE/SHP.OnlineShopAPI/SHP.OnlineShopAPI.Web/SHP.OnlineShopAPI.Web.csproj, .]
RUN dotnet restore ./SHP.OnlineShopAPI.Web.csproj
RUN dotnet publish ./SHP.OnlineShopAPI.Web.csproj -c Release -o out

FROM mcr.microsoft.com/dotnet/aspnet:5.0
WORKDIR ./app
COPY --from=build-env /app/out .
ENTRYPOINT ["dotnet", "SHP.OnlineShopAPI.Web.dll"]
